<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
        <title>Home Page</title>
        <style>
            .card-title {
                display: -webkit-box;
                -webkit-line-clamp: 1;
                /* Limits title to 2 lines */
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: normal;
            }

            .card-text {
                display: -webkit-box;
                -webkit-line-clamp: 3;
                /* Limits description to 3 lines */
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: normal;
            }

            .card-img-top {
                width: 100%;
                /* Set width to fill container */
                height: 300px;
                /* Set your desired fixed height */
                object-fit: cover;
                /* Ensures image fills the box while maintaining aspect ratio */
            }
        </style>
</head>

<body>

    <%- include("partials/navbar") %>

        <div class="container mt-4">

            <div class="container">
                <div class="row">

                    <% blogs.forEach(blog=> { %>
                        <div class="col-md-3">
                            <div class="card mb-2 me-3" style="width: 18rem;">
                                <img src="<%= blog.coverImage %>" class="card-img-top" height="300px"
                                    width="140px">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= blog.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= blog.description %>
                                    </p>
                                    <a href="blog/<%= blog._id %>" class="btn btn-primary">Read More...</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>





        </div>

        <%- include("partials/scripts") %>

</body>

</html>